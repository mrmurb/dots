# vim:filetype=sxhkdrc

#########
# bspwm #
#########

# exit bspwm
super + shift + e
    bspc quit

# restart panel
super + shift + p
    ~/.config/polybar/launch.sh bspwm &

# close/kill window
super +shift + q
    bspc node -c

# next desktop
super + t
    bspc node -l next

# balance tree (reset size)
super + b
    bspc desktop -B

# alt tabbing to change focus
super + Tab
    bspc node -f last

# toggle floating/fullscreen
super + {a,s,f}
    bspc node -t {tiled,floating,fullscreen}

# switch/move/manual windows
super + {ctrl,shift,alt} + {Left,Down,Up,Right}
    bspc node -{f,s,p} {west,south,north,east}

# focus or send to given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# click to focus
~button1
    bspc pointer -g focus

# move/resize window
super + button{1,3}
    bspc pointer -g {move,resize_corner}

# send the coordinates of the pointer to the current action (don't change this)
super + !button{1-3}
    bspc pointer -t %i %i

# terminate the current pointer action (don't change this)
super + @button{1-3}
    bspc pointer -u

##################
# vm independent #
##################

# brightness
super + F5
    xbacklight -dec 5
super + F6
    xbacklight -inc 5

# sound
XF86AudioLowerVolume
    sh ~/dots/scripts/pulse_control.sh dec 2
#    amixer -q set Master 2dB- unmute

XF86AudioRaiseVolume
    sh ~/dots/scripts/pulse_control.sh inc 2
#    amixer -q set Master 2dB+ unmute
XF86AudioMute
    sh ~/dots/scripts/pulse_control.sh mute
#    amixer -q set Master toggle

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# open terminal
super + Return
    urxvtc

# rofi
super + {_,shift + } d
    rofi -show {run,ssh}

# print screen
super + Print
    scrot '%Y-%m-%d_scrot.png' -e 'mv $f ~/images/scrot/'
