# vim:filetype=sxhkdrc

#########
# bspwm #
#########

# exit bspwm
super + shift + e
    bspc quit

# restart panel
super + shift + p
    ~/.config/polybar/launch.sh top

# close/kill window
super +shift + q
    bspc node -c

# next desktop
super + t
    bspc node -l next

# balance tree (reset size)
super + b
    bspc desktop -B

# alt tabbing to change focus
super + Tab
    bspc node -f last

# toggle floating/fullscreen
super + {a,s,f}
    bspc node -t {tiled,floating,fullscreen}

# switch/move/manual windows
super + {ctrl,shift,alt} + {Left,Down,Up,Right}
    bspc node -{f,s,p} {west,south,north,east}

# focus or send to given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

##################
# vm independent #
##################

# brightness
XF86MonBrightnessDown
    light -U 5
XF86MonBrightnessUp
    light -A 5
XF86KbdBrightnessDown
    light -s sysfs/leds/smc::kbd_backlight -U 5
XF86KbdBrightnessUp
    light -s sysfs/leds/smc::kbd_backlight -A 5

# sound
XF86AudioLowerVolume
    sh ~/dots/scripts/pulse_control.sh dec 2
#    amixer -q set Master 2dB- unmute

XF86AudioRaiseVolume
    sh ~/dots/scripts/pulse_control.sh inc 2
#    amixer -q set Master 2dB+ unmute
XF86AudioMute
    sh ~/dots/scripts/pulse_control.sh mute
#    amixer -q set Master toggle

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# open terminal
super + Return
    urxvtc

# rofi
super + {_,shift + } d
    rofi -show {run,ssh} -hide-scrollbar

# print screen
super + Print
    scrot '%Y-%m-%d_scrot.png' -e 'mv $f ~/images/scrot/'
